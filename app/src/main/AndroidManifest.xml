<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.json.itemdecoration">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 可折叠列表 -->
        <activity android:name=".expandableview.ExpandableListViewActivity" />

        <!-- 双向联动列表 -->
        <activity android:name=".relateview.TwoRecyclerActivity" />

        <activity android:name=".tworecycler.TwoRecyActivity" />

        <!--水印-->
        <activity android:name=".water.WaterMarkActivity"/>

        <!--侧滑删除-->
        <activity android:name=".slidedelete.SlideRecyclerViewActivity"/>

        <!--测试波纹进度条-->
        <activity android:name=".wave.WaveProgressActivity"/>

        <!--相册-->
        <activity android:name=".piceure.ChoosePhotoActivity" />
    </application>

</manifest>