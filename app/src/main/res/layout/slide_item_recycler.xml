<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/layout_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:layout_marginBottom="@dimen/d16"
            android:gravity="left"
            android:text="2019-05-10"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/inpute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16"
            android:layout_marginBottom="@dimen/d16"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="工资"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/d16"
            android:layout_marginBottom="@dimen/d16"
            android:layout_marginRight="@dimen/d15"
            android:gravity="right"
            android:text="11:44"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="@dimen/d16"
            android:layout_below="@id/date"
            android:text="详情:aaa"
            android:textColor="#747373"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/right_ll"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/d70"
            android:layout_height="match_parent"
            android:background="#F86043"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/delete"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="@dimen/d70"
            android:layout_height="match_parent"
            android:background="#BB1B21"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/modification"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>